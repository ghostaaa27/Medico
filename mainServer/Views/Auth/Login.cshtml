    <script>


    $(function () {
        $('input').iCheck({
        checkboxClass: 'icheckbox_square-blue',
        radioClass: 'iradio_square-blue',
        increaseArea: '20%' /* optional */
        });
    });







    function LoginDatas(){

        var email  =document.getElementById("email").value;
        var password  =document.getElementById("password").value;
        
        $.ajax({
            url: "/Login/LoginNow?email="+email+"&password="+password,
            type: "Post",
            dataType: "Json",
            success: function(result) {
                switch(result){
                    case 200 : window.location.href = "https://localhost:5001/";
                    console.log(200);
                    break;
                    case 201 : window.location.href = "https://localhost:5001/";
                    console.log(201);
                    break;
                    case 300 : document.getElementById("not_found").innerHTML = "email not found";
                    console.log(300);
                    break;
                    case 400 : document.getElementById("not_found").innerHTML = "Please verify your account to use.";
                    console.log(400);
                    break;
                    case 500 : document.getElementById("not_found").innerHTML = "Password didn't match";
                    console.log(500);
                    break;
                }
                  

                
              
            },
            error: function() {
              @* alert("email already exists"); *@
                
                
            }
        });
    }


